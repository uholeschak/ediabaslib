<Project>
   <PropertyGroup>
       <!-- Activating these compiler switches requires now more code adaptions -->
       <DefineConstants>$(DefineConstants);_OLD_PSDZ_BUS;_OLD_PSDZ_FA</DefineConstants>
   </PropertyGroup>
    <Target Name="AddReferences" BeforeTargets="PrepareForBuild">
        <Message Text="Adding references $(TargetFramework)" Importance="High" />
        <ItemGroup Condition=" ('$(TargetFramework)' == 'net48') Or ('$(TargetFramework)' == 'net481') ">
            <Reference Include="System.ComponentModel.DataAnnotations" />
            <Reference Include="System.Configuration" />
            <Reference Include="System.Management" />
            <Reference Include="System.ServiceModel" />
            <Reference Include="System.Web" />
            <Reference Include="System.Data.DataSetExtensions" />
            <Reference Include="Microsoft.CSharp" />
            <Reference Include="System.Deployment" />
            <Reference Include="System.Net.Http" />
            <Reference Include="System.Windows.Forms" />
            <Reference Include="System.Xml.Serialization" />
            <Reference Include="WindowsBase" />
        </ItemGroup>
        <ItemGroup Condition=" ('$(TargetFramework)' == 'net8.0-windows10.0.26100.0') Or ('$(TargetFramework)' == 'net10.0-windows10.0.26100.0') ">
            <PackageReference Include="System.ServiceModel.NetNamedPipe" Version="10.0.652802" />
        </ItemGroup>
    </Target>
</Project>
