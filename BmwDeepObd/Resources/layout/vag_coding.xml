<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewVagCoding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/layoutVagCoding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:id="@+id/layoutVagCodingSubsystem"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewVagCodingSubsystem"
                android:text="@string/vag_coding_subsystem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewInnerCaption" />
            <Spinner
                android:id="@+id/spinnerVagCodingSubsystem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutVagCodingShort"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewVagCodingShortTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewInnerCaption" />
            <EditText
                android:id="@+id/editTextVagCodingShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />
            <LinearLayout
                android:id="@+id/layoutVagCodingComments"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewVagCodingCommentsTitle"
                    android:text="@string/vag_coding_comments_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewInnerCaption" />
                <TextView
                    android:id="@+id/textViewVagCodingComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars = "vertical"
                    android:fadeScrollbars="false"
                    android:minLines="1"
                    android:maxLines="10" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutVagCodingRaw"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewVagCodingRawTitle"
                android:text="@string/vag_coding_raw_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewInnerCaption" />
            <EditText
                android:id="@+id/editTextVagCodingRaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutVagCodingRepairShopCode"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layoutVagCodingWorkshop"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewVagWorkshopNumberTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewInnerCaption" />
                <EditText
                    android:id="@+id/editTextVagWorkshopNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutVagCodingImporterNumber"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewVagImporterNumberTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewInnerCaption" />
                <EditText
                    android:id="@+id/editTextVagImporterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutVagCodingEquipmentNumber"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewVagEquipmentNumberTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewInnerCaption" />
                <EditText
                    android:id="@+id/editTextVagEquipmentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutCodingButtons"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewVagCodingExecuteTitle"
                android:text="@string/vag_coding_execute_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewInnerCaption" />
            <Button
                android:id="@+id/buttonCodingExecute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vag_coding_button_execute" />
            <CheckBox
                android:id="@+id/checkBoxEcuReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vag_coding_ecu_reset" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutVagCodingAssitant"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewVagCodingAssistant"
                android:text="@string/vag_coding_assistant_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextViewInnerCaption" />
            <ListView
                android:id="@+id/listViewVagCodingAssistant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>