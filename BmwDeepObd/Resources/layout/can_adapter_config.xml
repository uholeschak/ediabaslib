<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/layoutCanAdapter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewCanAdapterModeTitle"
            android:text="@string/can_adapter_mode_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Spinner
            android:id="@+id/spinnerCanAdapterMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterSepTimeTitle"
            android:text="@string/can_adapter_sep_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Spinner
            android:id="@+id/spinnerCanAdapterSepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterBlockSizeTitle"
            android:text="@string/can_adapter_block_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Spinner
            android:id="@+id/spinnerCanAdapterBlockSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterBtPinTitle"
            android:text="@string/can_adapter_bt_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <EditText
            android:id="@+id/editTextBtPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4"
            android:maxLines="1" />
        <TextView
            android:id="@+id/textViewCanAdapterBtNameTitle"
            android:text="@string/can_adapter_bt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <EditText
            android:id="@+id/editTextBtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="16"
            android:maxLines="1" />
        <TextView
            android:id="@+id/textViewCanAdapterIgnitionStateTitle"
            android:text="@string/can_adapter_ignition_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <TextView
            android:id="@+id/textViewCanAdapterIgnitionState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterBatVoltageTitle"
            android:text="@string/can_adapter_bat_voltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <TextView
            android:id="@+id/textViewCanAdapterBatVoltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterFwVersionTitle"
            android:text="@string/can_adapter_fw_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <TextView
            android:id="@+id/textViewCanAdapterFwVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterSerNumTitle"
            android:text="@string/can_adapter_ser_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <TextView
            android:id="@+id/textViewCanAdapterSerNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewCanAdapterTypeTitle"
            android:text="@string/can_adapter_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <TextView
            android:id="@+id/textViewCanAdapterType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonSelectFirmware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_can_adapter_fw_sel"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/textViewFwFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttonCanAdapterFwUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_can_adapter_fw_update"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/buttonCanAdapterFwChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_can_adapter_fw_change_elm"
            android:layout_gravity="center" />
        <CheckBox
            android:id="@+id/checkBoxCanAdapterExpert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/can_adapter_expert" />
    </LinearLayout>
</ScrollView>