<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/layoutYandexKey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/trans_caption_translator"
            android:id="@+id/textViewCaptionTranslator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButtonTranslatorYandexCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans_translator_yandex_cloud" />
            <RadioButton
                android:id="@+id/radioButtonTranslatorYandexTranslate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans_translator_yandex_translate" />
            <RadioButton
                android:id="@+id/radioButtonTranslatorIbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans_translator_ibm" />
            <RadioButton
                android:id="@+id/radioButtonTranslatorDeepl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trans_translator_deepl" />
            <RadioButton
              android:id="@+id/radioButtonTranslatorGoogleApis"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/trans_translator_google_apis" />
        </RadioGroup>
        <TextView
            android:id="@+id/textViewTransKeyDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewTransKeyCopyTitle"
            android:text="@string/trans_key_copy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Button
            android:id="@+id/buttonYandexKeyCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_api_key_create"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/buttonYandexKeyGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_api_key_get"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/textViewYandexKeyPasteTitle"
            android:text="@string/trans_key_paste_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Button
            android:id="@+id/buttonYandexKeyPaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_api_key_paste"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/editTextYandexApiKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textNoSuggestions"
            android:maxLines="1" />
        <TextView
            android:id="@+id/textViewFolderIdPasteTitle"
            android:text="@string/folder_id_paste_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Button
            android:id="@+id/buttonFolderIdPaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_folder_id_paste"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/editTextFolderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textNoSuggestions"
            android:maxLines="1" />
        <TextView
            android:id="@+id/textViewApiUrlPasteTitle"
            android:text="@string/api_url_paste_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Button
            android:id="@+id/buttonApiUrlPaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_api_url_paste"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/editTextApiUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:maxLines="1" />
        <TextView
            android:id="@+id/textViewYandexKeyTestTitle"
            android:text="@string/trans_key_test_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Button
            android:id="@+id/buttonYandexKeyTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_api_key_test"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/textViewYandexKeyTestResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>