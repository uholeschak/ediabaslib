<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
      android:id="@+id/layoutArgType"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/textViewArgTypeTitle"
          android:text="@string/arg_assist_arg_type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/TextViewInnerCaption" />
      <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <RadioButton
            android:id="@+id/radioButtonArgTypeArg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arg_assist_type_arg" />
          <RadioButton
            android:id="@+id/radioButtonArgTypeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arg_assist_type_id" />
      </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBlockNumber"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewBlockNumberTitle"
            android:text="@string/arg_assist_block_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewInnerCaption" />
        <Spinner
            android:id="@+id/spinnerBlockNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/checkBoxDefineBlockNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arg_assist_define_new" />
    <TextView
        android:text="@string/arg_assist_args"
        android:id="@+id/textViewArgListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewInnerCaption" />
    <ListView
        android:id="@+id/argList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/ListViewNoDividerStyle" />
</LinearLayout>