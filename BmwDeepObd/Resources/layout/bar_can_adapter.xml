<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/buttonAdapterRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_can_adapter_read"
        android:layout_gravity="center"
        android:layout_weight="1" />
    <Button
        android:id="@+id/buttonAdapterWrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_can_adapter_write"
        android:layout_gravity="center"
        android:layout_weight="1" />
    <Button
        android:id="@+id/buttonAdapterClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_can_adapter_close"
        android:layout_gravity="center"
        android:layout_weight="1" />
</LinearLayout>